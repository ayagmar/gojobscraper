version: '3.8'

services:
  postgres:
    image: postgres:13
    container_name: job_scraper_db
    environment:
      POSTGRES_DB: jobscraper
      POSTGRES_USER: jobuser
      POSTGRES_PASSWORD: jobpassword
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data: